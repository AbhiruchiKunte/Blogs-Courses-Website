    <style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Colors and Typography */
:root {
    --primary-color: #0B192C;
    --secondary-color: #3a4f9e;
    --text-color: #555;
    --bg-light: #ffffff;
    --bg-dark: #f4f4f9;
    --transition-base: 0.3s ease;
}
body {
    font-family: 'Arial', sans-serif;
    overflow-x: hidden;
    background-color: var(--bg-dark);
}

/* Simple animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(40px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
@keyframes floatHero {
    0%   { transform: translateY(0); }
    50%  { transform: translateY(-6px); }
    100% { transform: translateY(0); }
}

/* Scroll reveal base */
.reveal {
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.8s ease, transform 0.8s ease;
}
.reveal.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Navbar */
.navbar {
    position: fixed;
    width: 100%;
    top: 0;
    background-color: var(--primary-color);
    color: #fff;
    padding: 15px 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    z-index: 10;
    animation: fadeIn 0.8s ease-out;
}

.navbar .logo {
    font-size: 2em;
    font-weight: bold;
    color: #fff;
    font-family: "Lobster", serif;
    font-weight: 400;
    font-style: normal;
    margin-left: -20px;
    cursor: pointer;
}

.navbar .nav-links {
    list-style: none;
    display: flex;
    margin: 0;
    padding: 0;
    transition: all var(--transition-base);
}

.nav-links li {
    margin: 0 15px;
    position: relative;
}

.nav-links a {
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-base);
    font-size: 18px;
}

/* Underline animation */
.nav-links a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -4px;
    width: 0%;
    height: 2px;
    background: var(--secondary-color);
    transition: width 0.25s ease;
}
.nav-links a:hover::after,
.nav-links .active::after {
    width: 100%;
}

.nav-links a:hover,
.nav-links .active {
    color: var(--secondary-color);
}

/* Mobile menu toggle button */
.menu-toggle {
    display: none;
    font-size: 2rem;
    color: #fff;
    cursor: pointer;
    z-index: 11;
}

/* Hero Section */
.hero {
    background: url('/Images/Galaxy-HD-Pictures.jpg') center/cover no-repeat;
    margin-top: 60px;
    color: white;
    text-align: center;
    padding: 8rem 1rem;
    position: relative;
    min-height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: center;   
    align-items: center;       
    animation: fadeIn 1s ease-out;
    gap: 1.5rem;
}

/* overlay */
.hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom right, rgba(11,25,44,0.85), rgba(11,25,44,0.4));
    z-index: 0;
}

.hero h1,
.hero p,
.hero .hero-btn {
    position: relative;
    z-index: 1;
}

.hero h1 {
   color: #fff; 
   font-size: 3rem; 
   font-weight: 600; 
   margin-bottom: 1rem; 
   font-family: "Anton SC", sans-serif; 
   font-weight: 400; 
   font-style: normal; 
   animation: floatHero 4s ease-in-out infinite;
}

.hero p {
    margin-top: -1.5rem; 
    font-size: 1.1rem; 
    font-weight: 400; 
    max-width: 600px;
}

/* button wrapper for spacing */
.hero-buttons {
    margin-top: 1.8rem;
    display: flex;
    gap: 1rem;
}

/* buttons */
.hero-btn {
    display: inline-block;
    padding: 0.75rem 2.2rem;
    background: linear-gradient(135deg, var(--secondary-color), #9092fe);
    color: white;
    border: none;
    border-radius: 999px;
    text-decoration: none;
    font-size: 1.05rem;
    font-weight: 600;
    box-shadow: 0 10px 25px rgba(0,0,0,0.3);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.hero-btn:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 14px 30px rgba(0,0,0,0.35);
}

@media (max-width: 480px) {
    .hero-buttons {
        display: flex;
        flex-direction: column;
        padding: 1rem 2.2rem;
    }
}

/* General Section Styles */
section {
    padding: 30px 40px;
}

/* Section Titles */
section h1 {
    text-align: center;
    font-family: Arial, Helvetica, sans-serif;
    margin-bottom: -30px;
}
section h3 {
    text-align: center;
    font-family: Arial, Helvetica, sans-serif;
    margin-bottom: 20px;
}

/* Free Courses Section */
.free-course-section {
    margin-top: 40px;       /* reduced space */
    text-align: center;
}

.free-course-title {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 32px;
    letter-spacing: 0.1rem;
    margin-bottom: 10px;   /* reduce space below title */
    margin-top: 0;
}
/* Paid Courses Section */
.paid-course-section {
    margin-top: 40px;         /* reduced space */
    text-align: center;
}

.paid-course-title {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 32px;
    letter-spacing: 0.1rem;
    margin-bottom: 10px;     /* reduce space below title */
    margin-top: 0;
}
/* Blog Section */
.blog-section {
    margin-top: 20px !important;
    text-align: center;
}

.blogs-title {
    font-size: 32px;
    margin: 0 0 10px 0 !important;  /* Removes gap below title */
    padding: 0;
    font-family: Arial, Helvetica, sans-serif;
}

/* Reduce space under swiper so cards come closer */
.blogs-swiper {
    padding-top: 10px !important;
    padding-bottom: 20px !important;
}


/* Swiper Container */
.container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    overflow: hidden;
}

/* Give some padding around sliders */
.swiper {
    padding: 40px 10px 60px;
}
.blogs-swiper,
.free-courses-swiper,
.paid-courses-swiper {
    position: relative;
}

/* Card Styling */
.card-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
}

.card {
    width: clamp(240px, 24vw, 300px);
    min-height: 360px;
    border-radius: 18px;
    background: #fff;
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    overflow: hidden;
     transition: transform .35s ease, box-shadow .35s ease;
    margin: 0 auto;
    animation: fadeInUp 0.7s ease-out;
}

.card:hover {
     transform: translateY(-12px) scale(1.03);
    box-shadow: 0 18px 40px rgba(0,0,0,0.18);
}

/* Card Content */
.card-content {
    padding: 15px;
    text-align: center;
}

.card-content .image {
    overflow: hidden;
    border-radius: 14px;
}

.card-content .image img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 14px;
    transition: transform 0.3s ease;
}

.card-content .image img:hover{
    transform: scale(1.05);
}
.name-profession {
    margin-top: 10px;
    font-size: 18px;
    font-weight: bold;
    font-family: Arial, Helvetica, sans-serif;
}

.card-description p,
.created-at {
    font-size: 14px;
    color: #555;
    margin-top: 20px;
}

.button {
    margin-top: 15px;
}

.button .message-button {
    padding: 10px 20px;
    background-color: var(--primary-color);
    color: #fff;
    border: none;
    border-radius: 999px;
    cursor: pointer;
    transition: background-color var(--transition-base), transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 6px 16px rgba(0,0,0,0.12);
}

.button .message-button:hover {
    background-color: #0056b3;
    transform: translateY(-1px);
    box-shadow: 0 10px 22px rgba(0,0,0,0.2);
}

/* Swiper Pagination */
.swiper-pagination {
    bottom: 10px !important;
    text-align: center;
}

.swiper-pagination-bullet {
    background-color: #c4c4c4 !important;
    opacity: 1 !important;
}

.swiper-pagination-bullet-active {
    background-color: var(--secondary-color) !important;
}
/* Swiper Navigation Buttons (Modern Arrows) */
.swiper-button-next,
.swiper-button-prev {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(11, 25, 44, 0.85);
    backdrop-filter: blur(5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.25);
    color: white !important;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all .3s ease;
    top: 50%;
    transform: translateY(-50%);
    z-index: 20;
}


/* Hover Effects */
.swiper-button-next:hover,
.swiper-button-prev:hover {
    transform: translateY(-50%) scale(1.15);
    background: var(--secondary-color);
    box-shadow: 0 12px 25px rgba(0,0,0,0.4);
}
 /* Positioning for arrows */
    .blogs-swiper .swiper-button-prev,
    .free-courses-swiper .swiper-button-prev,
    .paid-courses-swiper .swiper-button-prev{
      left:6px;
    }
    .blogs-swiper .swiper-button-next,
    .free-courses-swiper .swiper-button-next,
    .paid-courses-swiper .swiper-button-next{
      right:6px;
    }
/* Custom Arrow Content */
.swiper-button-prev::after,
    .swiper-button-next::after{
      font-size:22px; font-weight:800; color:#fff;
    }
    .swiper-button-prev::after{ content: "<"; } 
    .swiper-button-next::after{ content: ">"; }

/* Smaller screens improvements */
@media (max-width: 480px) {
    .swiper-button-next,
    .swiper-button-prev {
        width: 40px;
        height: 40px;
    }
    .swiper-button-next::after,
    .swiper-button-prev::after {
        font-size: 18px;
    }
}

/* Extra small devices */
@media (max-width: 320px) {
    .swiper-button-next {
        margin-right: -20px;
    }
    .swiper-button-prev {
        margin-left: -20px;
    }
}

/* Media Queries for Responsiveness */
@media (max-width: 1200px) {
    .card {
        width: clamp(230px, 30vw, 260px);
    }
}

@media (max-width: 1024px) {
    .card-wrapper {
        gap: 15px;
    }

    .card {
        width: 240px;
        min-height: 340px;
    }

    .card-content .image img {
        height: 130px;
    }
}

/* Navbar + hero + layout for tablets & below */
@media (max-width: 768px) {
    .nav-links {
        flex-direction: column;
        background-color: var(--primary-color);
        position: absolute;
        top: 100%;
        right: 0;
        width: 100%;
        height: 0;
        overflow: hidden;
        opacity: 0;
        transition: all var(--transition-base);
    }

    .nav-links.show {
        height: auto;
        opacity: 1;
        padding: 15px 0 10px;
    }

    .nav-links li {
        margin: 10px 30px;
        text-align: left;
    }

    .menu-toggle {
        display: block;
    }

    .hero {
        padding: 6rem 1.5rem;
        margin-top: 70px !important;
        min-height: 70vh;
    }

    .hero h1 {
        font-size: 2.2rem;
        margin-bottom: 0.75rem;
    }

    .hero p {
        font-size: 1rem;
    }

    .card-wrapper {
        flex-wrap: wrap;
        gap: 10px;
    }

    .card {
        width: 260px;
        min-height: 320px;
        margin-bottom: 15px;
    }

    .card-content .image img {
        height: 120px;
    }

    .name-profession {
        font-size: 16px;
    }

    section {
        padding: 25px 20px;
    }

    .two_footer {
        width: 90%;
    }
}

@media (max-width: 480px) {
    .hero {
        padding: 4rem 1.2rem;
        margin-top: 60px;
    }

    .hero h1 {
        font-size: 1.9rem;
    }

    .hero p {
        font-size: 0.95rem;
    }

    .hero-btn {
        font-size: 0.85rem;
        padding: 0.55rem 1.6rem;
    }

    .card-wrapper {
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
    }

    .card {
        max-width: 300px;
        width: 100%;
        min-height: 0;
        margin: 0 auto 15px auto;
    }

    .card-content .image img {
        width: 100%;
        height: 140px;
    }

    .name-profession {
        font-size: 16px;
    }

    .card-description p,
    .created-at {
        font-size: 13px;
    }

    .button .message-button {
        padding: 8px 16px;
        font-size: 14px;
    }

    section {
        padding: 25px 15px;
    }
}

@media (max-width: 375px) {
    .hero h1 {
        font-size: 1.7rem;
    }

    .hero p {
        font-size: 0.9rem;
    }
}


/* Footer */
.footer {
    background-color: var(--primary-color);
    color: white;
    padding: 4rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    height: auto;
}

.footer a {
    text-decoration: none;
    color: white;
    transition: color var(--transition-base);
}

.footer a:hover {
    color: var(--secondary-color);
}

#mail_id {
    font-size: 1.1rem;
    margin-bottom: 20px;
}

#three_div {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
}

.social_icon {
    font-size: 24px;
    color: #fff;
    transition: color 0.3s, transform 0.3s;
}

.social_icon:hover {
    color: var(--secondary-color);
    transform: scale(1.2);
}

/* Footer Sections */
.two_footer {
    display: flex;
    justify-content: space-between;
    width: 80%;
    margin-top: 2rem;
    flex-wrap: wrap;
}

.left{
    width: 30%;
    text-align: left;
}
.mid{
    width: 30%;
    text-align: center;
}
.right{
    width: 30%;
    text-align: right;
}

.left h2, .mid h2, .right h2 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    color: #fff;
}

#sub_link {
    display: block;
    color: white;
    text-decoration: none;
    margin-bottom: 8px;
    font-size: 1rem;
}

#sub_link:hover {
    color: var(--secondary-color);
}

/* Footer small screens */
@media (max-width: 768px) {
    .footer {
        height: auto;
        padding: 3rem 1.5rem;
    }

    .two_footer {
        flex-direction: column;
        align-items: center;
        width: 100%;
        margin-top: 1.5rem;
    }

    .left, .mid, .right {
        width: 100%;
        text-align: center;
        margin-bottom: 1rem;
    }
}

@media (max-width: 375px) {
    #mail_id {
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .social_icon {
        font-size: 18px;
    }

    .left h2, .mid h2, .right h2 {
        font-size: 1rem;
        margin-bottom: 0.6rem;
    }

    #sub_link {
        font-size: 0.8rem;
    }
}

/* For 320px screens */
@media (max-width: 320px) {
    .left h2, .mid h2, .right h2 {
        font-size: 0.9rem;
    }

    .left a, .mid a, .right a {
        font-size: 0.75rem;
    }
}

/* Contact Section Wrapper */
#contact {
     padding-top: 20px !important;
    background-color: var(--bg-dark);
    text-align: center;
    margin-top: 40px; 
}

/* Inner layout */
.contact-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 25px;
}

/* Title Styling */
.contact-title {
    font-size: 32px;
    font-family: Arial, Helvetica, sans-serif;
    letter-spacing: 0.5px;
    margin: 0 0 10px 0; 
    color: var(--primary-color);
}

#contact .contact-title {
    margin-top: 0 !important;
}

/* Contact details box */
.contact-details {
    background-color: var(--bg-dark);
    width: 600px;
    max-width: 100%;
    padding: 20px;
    border: none;
    display: flex;
    align-items: center;
    flex-direction: column;
}

/* Text spacing */
.contact-details p,
.contact-details a,
.contact-details button {
    margin: 10px 0;
}

/* Email link */
.contact-email {
    color: #007BFF;
    text-decoration: none;
    font-weight: bold;
}

.contact-email:hover {
    text-decoration: underline;
}

/* Buttons below form */
.contact-buttons {
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
}

/* Buttons general */
button {
    background-color: var(--primary-color);
    color: white;
    border: none;
    border-radius: 5px;
    padding: 10px 15px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color var(--transition-base), transform 0.2s ease, box-shadow 0.2s ease;
}

button:hover {
    background-color: var(--secondary-color);
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(0,0,0,0.18);
}

button i {
    margin-right: 5px;
}

/* Contact Form Box */
.contact-form {
    max-width: 600px;
    width: 100%;
    background: var(--bg-light);
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    margin-top: 10px; 
}

/* Form Inputs */
.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 6px;
    outline: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.contact-form input:focus,
.contact-form textarea:focus {
    border-color: var(--secondary-color);
    box-shadow: 0 0 0 3px rgba(120,212,197,0.25);
}

/* Labels */
.contact-form label {
    display: block;
    margin-bottom: 5px;
    color: var(--text-color);
    font-weight: bold;
    text-align: left;
}

/* Checkbox */
.contact-form input[type="checkbox"] {
    width: auto;
}

/* Submit Button */
.contact-form button {
    width: 100%;
    padding: 12px;
    background-color: var(--primary-color);
    color: #fff;
    font-size: 16px;
    font-weight: bold;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    transition: background-color var(--transition-base), transform 0.2s ease, box-shadow 0.2s ease;
}

.contact-form button:hover {
    background-color: var(--secondary-color);
    transform: translateY(-1px);
    box-shadow: 0 8px 22px rgba(0,0,0,0.18);
}


.privacy-policy {
    max-width: 600px;
    margin: 50px auto 0;
    padding: 20px;
    text-align: left;
    color: var(--text-color);
    background-color: var(--bg-dark);
    border: none;
}

.privacy-policy h2 {
    color: var(--primary-color);
    margin-bottom: 20px;
    font-size: 2em;
    border-bottom: 2px solid var(--primary-color);
    padding-bottom: 10px;
}

.privacy-policy p {
    font-size: 1.05em;
    line-height: 1.6;
    margin-bottom: 15px;
    color: var(--text-color);
}

html {
    scroll-behavior: smooth;
}

/* Modals (Admin + Form success) */
#adminModal,
#formSuccessModal {
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: none;
    justify-content: center;
    align-items: center;
}

.modal-content {
    background-color: #fff;
    position: fixed; 
    top: 50%;        
    left: 50%;       
    transform: translate(-50%, -50%); 
    padding: 20px;
    border-radius: 10px;
    width: 300px;
    max-width: 90%;
    box-shadow: 0 10px 25px rgba(0,0,0,0.25);
}
/* Headings */
.modal-content h3 {
    color:black;
    margin-bottom: 10px;
    text-align: center;
}

/* Labels */
.modal-content label {
    color: black;
}

/* Inputs */
.modal-content input {
    margin: 10px 0;
    padding: 8px;
    width: 100%;
    border: 1px solid #ccc;
    border-radius: 5px;
    outline: none;
}

/* Buttons */
.modal-content button {
    padding: 8px 16px;
    cursor: pointer;
    margin: 10px 5px 0 5px;
}

/* Success modal text */
#formSuccessModal .modal-content p {
    color: #333;
    margin-top: 10px;
    text-align: center;
}

/* All section titles inside sections */
section h1,
section h2,
section h3 {
    margin-top: 0 !important;
    padding-top: 0 !important;
}

/* Remove huge space before Connect with Us */
#contact {
    padding-top: 10px !important;
