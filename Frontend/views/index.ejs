<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SciAstra Platform</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@400;600;700;800&family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <style>
/* Global Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Colors, Typography, and Transitions */
:root {
    --primary-color: #0A1930; /* Dark Navy/Space Blue */
    --secondary-color: #6FFFE9; /* Bright Cyan/Aqua - Used for accents */
    --accent-color: #007bff; /* Kept for Razorpay theme, but primary/secondary used elsewhere */
    --text-color-dark: #333333;
    --text-color-light: #f4f4f9;
    --bg-light: #ffffff;
    --bg-dark: #f4f4f9;
    --shadow-light: 0 6px 15px rgba(0, 0, 0, 0.1);
    --shadow-hover: 0 10px 25px rgba(0, 0, 0, 0.2);
    --transition: all 0.4s ease-in-out;
}
body {
    font-family: 'Poppins', sans-serif;
    overflow-x: hidden;
    background-color: var(--bg-dark);
    color: var(--text-color-dark);
}
h1, h2, h3 {
    font-family: 'Montserrat', sans-serif;
    color: var(--primary-color);
}
html {
    scroll-behavior: smooth;
}

/* --- ANIMATIONS --- */
@keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes scaleUp {
    from { transform: scale(0.9); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
}


/* --- NAVBAR --- */
.navbar {
    position: fixed;
    width: 100%;
    top: 0;
    background-color: var(--primary-color);
    color: var(--text-color-light);
    padding: 15px 40px; /* Increased padding */
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    z-index: 100; /* Increased z-index */
}

.navbar .logo {
    font-size: 2.5em; /* Larger logo */
    font-weight: 700;
    color: var(--secondary-color);
    font-family: "Lobster", serif;
    margin-left: -20px;
    transition: var(--transition);
}
.navbar .logo:hover {
    transform: rotate(-2deg) scale(1.05);
}

.navbar .nav-links {
    list-style: none;
    display: flex;
    margin: 0;
    padding: 0;
    transition: var(--transition);
}

.nav-links li {
    margin: 0 20px;
}

.nav-links a {
    color: var(--text-color-light);
    text-decoration: none;
    font-weight: 500;
    font-size: 17px;
    position: relative;
    padding-bottom: 5px;
    transition: var(--transition);
}

/* Modern Nav Hover Underline */
.nav-links a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 3px;
    bottom: 0;
    left: 0;
    background-color: var(--secondary-color);
    transition: width 0.3s ease;
}

.nav-links a:hover::after,
.nav-links .active::after {
    width: 100%;
}

.nav-links a:hover,
.nav-links .active {
    color: var(--secondary-color);
}

/* Mobile menu toggle button */
.menu-toggle {
    display: none;
    font-size: 2rem;
    color: var(--secondary-color);
    cursor: pointer;
    z-index: 101;
}

/* --- HERO SECTION --- */
.hero {
    /* Replaced image path with a generic space image for better illustration */
    background: linear-gradient(rgba(10, 25, 48, 0.7), rgba(10, 25, 48, 0.7)), url('https://images.unsplash.com/photo-1451187580459-49c6aa8a83f7?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') center/cover no-repeat;
    margin-top: 80px;
    color: white;
    text-align: center;
    padding: 10rem 1rem;
    position: relative;
    min-height: 550px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.hero h1 {
    color: #fff;
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    font-family: "Montserrat", sans-serif;
    position: static; /* Overriding previous absolute/relative positioning for animation */
    top: auto;
    animation: fadeInDown 1s ease-out;
}

.hero p {
    margin-top: 0;
    font-size: 1.5rem;
    font-weight: 400;
    position: static;
    bottom: auto;
    max-width: 800px;
    animation: fadeInUp 1s ease-out 0.5s forwards;
    opacity: 0;
}

.hero-btn {
    display: inline-block;
    margin-top: 2.5rem;
    padding: 1rem 3rem;
    background-color: var(--secondary-color);
    color: var(--primary-color);
    border: none;
    border-radius: 50px;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: 600;
    transition: var(--transition);
    box-shadow: 0 4px 15px rgba(111, 255, 233, 0.4);
    animation: scaleUp 1s ease-out 1s forwards;
    opacity: 0;
}

.hero-btn:hover {
    background-color: var(--primary-color);
    color: var(--secondary-color);
    box-shadow: 0 6px 20px rgba(111, 255, 233, 0.8);
    transform: translateY(-5px) scale(1.05);
}

/* --- GENERAL SECTIONS --- */
section {
    padding: 80px 40px; /* Increased padding */
    min-height: 300px;
}

section h1, section h3 {
    text-align: center;
    font-family: 'Montserrat', sans-serif;
    margin-bottom: 40px;
    font-weight: 700;
    position: static !important; /* Ensure proper positioning for animation */
    top: auto !important;
    text-transform: uppercase;
}

/* --- CARDS & SWIPER --- */
.card-wrapper {
    display: flex;
    align-items: stretch;
    justify-content: center;
    gap: 30px;
}

.card {
    width: 100%;
    max-width: 320px;
    height: 440px; /* Fixed height for consistency */
    border-radius: 15px;
    background: var(--bg-light);
    box-shadow: var(--shadow-light);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: var(--transition);
    border: 1px solid rgba(0, 0, 0, 0.05);
    margin: 0 auto;
    margin-left: 0 !important; /* Remove original inline margin */
    opacity: 0; /* Prepare for Intersection Observer animation (JS) */
    transform: translateY(20px); /* Prepare for animation */
}

/* Card Animation Class (to be added by JS) */
.card.in-view {
    animation: fadeInUp 0.8s forwards;
    opacity: 1;
    transform: translateY(0);
}

.card:hover {
    transform: translateY(-8px) scale(1.02); /* Smoother animation */
    box-shadow: var(--shadow-hover);
    border-color: var(--secondary-color);
}

.card-content {
    padding: 20px;
    text-align: center;
    width: 100%;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.card-content .image {
    width: 100%;
    height: 150px;
    margin-bottom: 15px;
    overflow: hidden;
    border-radius: 10px;
}

.card-content .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
    transition: transform 0.5s ease;
}

.card-content .image img:hover{
    transform: scale(1.1);
}
.name-profession {
    margin-top: 10px;
    font-size: 1.2em;
    font-weight: 700;
    font-family: 'Montserrat', sans-serif;
    color: var(--primary-color);
    line-height: 1.3;
}

.card-description p {
    font-size: 0.95em;
    color: #555;
    margin-top: 10px;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3; 
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}
.created-at {
    font-size: 0.8em;
    color: #888;
    margin-top: 10px;
}

.button {
    margin-top: 20px;
    width: 100%;
}

.button .message-button {
    width: 90%;
    padding: 12px 20px;
    background-color: var(--primary-color);
    color: #fff;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    font-weight: 600;
    transition: var(--transition);
}

.button .message-button:hover {
    background-color: var(--secondary-color);
    color: var(--primary-color);
    box-shadow: 0 4px 10px rgba(111, 255, 233, 0.5);
    transform: translateY(-3px);
}

/* Swiper Styling Overrides */
.swiper {
    padding-bottom: 50px;
    overflow: visible; /* Allows buttons to show */
}
.swiper-pagination {
    bottom: 5px !important;
}

.swiper-pagination-bullet {
    background-color: var(--primary-color) !important;
    opacity: 0.5 !important;
    width: 10px;
    height: 10px;
}

.swiper-pagination-bullet-active {
    background-color: var(--secondary-color) !important;
    opacity: 1 !important;
    width: 12px;
    height: 12px;
}

.swiper-button-next,
.swiper-button-prev {
    color: var(--primary-color)!important;
    top: 50%;
    width: 40px;
    height: 40px;
    font-size: 20px !important;
    opacity: 0.7;
    transition: opacity 0.3s ease, transform 0.3s ease;
}
.swiper-button-next:hover,
.swiper-button-prev:hover {
    opacity: 1;
    transform: translateY(-50%) scale(1.1);
}

/* Specific Section Adjustments */
#blogs {
    padding-top: 120px; /* Adjusted padding after hero */
    position: static !important;
    font-size: 1em !important;
}
#free-courses, #paid-courses {
    margin-top: 0 !important;
    padding-top: 40px;
}


/* --- CONTACT SECTION --- */
#contact {
    padding: 80px 40px;
    background-color: var(--bg-light);
}

.contact-section {
    gap: 40px;
}

#contact h1 {
    color: var(--primary-color);
    font-size: 2.5rem;
    margin-top: 0;
    margin-bottom: 25px !important;
}

.contact-buttons {
    gap: 20px;
    margin-top: 20px;
    animation: fadeInUp 1s ease-out 0.8s forwards;
    opacity: 0;
}
.contact-buttons button {
    background-color: var(--primary-color);
    padding: 12px 25px;
    border-radius: 50px;
    font-weight: 500;
}

.contact-buttons button:hover {
    background-color: var(--secondary-color);
    color: var(--primary-color);
}

.contact-form {
    max-width: 600px;
    width: 100%;
    background: var(--bg-dark);
    padding: 40px;
    border-radius: 10px;
    box-shadow: var(--shadow-light);
    border: 1px solid #ddd;
    animation: scaleUp 1s ease-out 0.4s forwards;
    opacity: 0;
}

.contact-form input, .contact-form textarea {
    border: 1px solid #ccc;
    border-radius: 8px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}
.contact-form input:focus, .contact-form textarea:focus {
    border-color: var(--secondary-color);
    box-shadow: 0 0 5px rgba(111, 255, 233, 0.5);
}

.contact-form label {
    color: var(--primary-color);
    font-weight: 600;
}

.contact-form button {
    padding: 15px;
    border-radius: 50px;
    margin-top: 15px;
}
.contact-form button:hover {
    background-color: var(--secondary-color);
    color: var(--primary-color);
}


.privacy-policy {
    max-width: 800px;
    margin: 50px auto 0;
    padding: 30px;
    background-color: var(--bg-dark);
    border-radius: 10px;
    box-shadow: var(--shadow-light);
}

.privacy-policy h2 {
    font-size: 1.8em;
    border-bottom: 2px solid var(--secondary-color);
    color: var(--primary-color);
    padding-bottom: 10px;
}
.privacy-policy p {
    color: #555;
    font-size: 1em;
}

/* --- FOOTER --- */
.footer {
    background-color: var(--primary-color);
    color: var(--text-color-light);
    padding: 5rem 2rem;
    height: auto !important; 
    border-top: 5px solid var(--secondary-color);
}

.footer a {
    color: var(--text-color-light);
}

.footer a:hover {
    color: var(--secondary-color);
}

#mail_id {
    font-size: 1.2rem;
    margin-bottom: 25px;
    font-weight: 500;
}

#three_div {
    display: flex;
    gap: 25px;
    margin-bottom: 30px;
}

.social_icon {
    font-size: 28px;
    transition: var(--transition);
}

.social_icon:hover {
    color: var(--secondary-color);
    transform: translateY(-3px) scale(1.15);
}

.two_footer {
    width: 90%;
    max-width: 1200px;
    margin: 3rem auto 0;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    text-align: left;
}

.left, .mid, .right {
    width: 100%;
    text-align: left;
}
.mid {
    text-align: center;
}
.right {
    text-align: right;
}

.left h2, .mid h2, .right h2 {
    font-size: 1.6rem;
    margin-bottom: 1.5rem;
    color: var(--secondary-color);
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
}

#sub_link {
    display: block;
    margin-bottom: 10px;
    font-size: 1.05rem;
    font-weight: 300;
}

/* --- MODAL STYLING --- */
#adminModal {
    background-color: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    z-index: 10000;
}
.modal-content {
    background-color: var(--bg-light);
    margin: 10% auto;
    padding: 30px;
    border-radius: 10px;
    width: 90%;
    max-width: 400px;
    box-shadow: var(--shadow-hover);
    animation: slideIn 0.3s ease-out;
}
@keyframes slideIn {
    from { transform: translateY(-50px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

.modal-content h3 {
    color: var(--primary-color);
    margin-bottom: 20px;
}
.modal-content label{
    color: var(--primary-color);
    font-weight: 600;
}
.modal-content input {
    margin: 8px 0 15px 0;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}
.modal-content button {
    background-color: var(--primary-color);
    color: white;
    padding: 10px 20px;
    border-radius: 50px;
    margin-left: 10px;
    transition: var(--transition);
}
.modal-content button:hover {
    background-color: var(--secondary-color);
    color: var(--primary-color);
}
.modal-content button:first-of-type {
    margin-left: 0;
}


/* --- RESPONSIVENESS (Refined) --- */
@media (max-width: 1024px) {
    .navbar {
        padding: 15px 20px;
    }
    .hero h1 {
        font-size: 3rem;
    }
    .hero p {
        font-size: 1.2rem;
    }
    .two_footer {
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }
}

@media (max-width: 768px) {
    .nav-links {
        /* Mobile menu show styles */
        flex-direction: column;
        text-align: center;
        position: absolute;
        top: 100%;
        right: 0;
        width: 100%;
        height: 0;
        overflow: hidden;
        opacity: 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        z-index: 99;
    }
    .nav-links.show {
        height: auto;
        opacity: 1;
        padding: 20px 0;
    }
    .nav-links li {
        margin: 10px 0;
    }
    .nav-links a {
        padding: 10px 0;
        display: block;
    }
    .nav-links a::after {
        content: none; /* Hide hover effect on mobile menu */
    }

    .menu-toggle {
        display: block;
    }
    
    .hero {
        padding: 6rem 1rem;
        margin-top: 60px;
        min-height: 350px;
    }
    .hero h1 {
        font-size: 2.5rem;
    }
    .hero p {
        font-size: 1.1rem;
    }
    .hero-btn {
        font-size: 1rem;
        padding: 0.8rem 2rem;
    }

    .card {
        max-width: 90%;
        height: 380px;
        margin-bottom: 20px;
    }

    section {
        padding: 40px 20px;
    }
    .swiper-button-next,
    .swiper-button-prev {
        display: none; /* Hide buttons on mobile to avoid clutter */
    }
    .two_footer {
        grid-template-columns: 1fr; /* Stack footer columns */
        text-align: center;
    }
    .left, .mid, .right {
        width: 100%;
        text-align: center;
        margin-top: 0 !important;
    }
    .left h2, .mid h2, .right h2 {
        margin-top: 20px;
    }
}

@media (max-width: 480px) {
    .navbar .logo {
        font-size: 2em;
    }
    .hero {
        padding: 4rem 1rem;
    }
    .hero h1 {
        font-size: 2rem;
    }
    .hero p {
        font-size: 0.9rem;
    }
    .contact-buttons {
        flex-direction: column;
        gap: 10px;
        width: 100%;
        max-width: 300px;
    }
    .contact-buttons button {
        width: 100%;
    }
    .footer {
        padding: 3rem 1rem;
    }
    .card {
        height: 350px;
    }
    .modal-content button {
        margin-left: 5px;
    }
}

/* Cleanup for 320px screens */
@media (max-width: 375px) {
    .footer {
        height: auto;
    }
    .left h2, .mid h2, .right h2 {
        font-size: 1.4rem !important;
    }
}
@media (max-width: 320px) {
     .left a, .mid a, .right a {
        font-size: 0.9rem !important;
     }
}
    </style>
</head>
<body>
    <div class="navbar">
        <div class="logo">SciAstra</div>
        <div class="menu-toggle" onclick="toggleMenu()">&#9776;</div> <ul class="nav-links">
            <li><a href="#home">Home</a></li>
            <li><a href="#blogs">Blog</a></li>
            <li><a href="#free-courses">Courses</a></li>
            <li><a href="#contact">Contact</a></li>
            <li><a href="#" onclick="showAdminModal()">Add New</a></li>
        </ul>
    </div>

<div id="adminModal">
<div class="modal-content">
    <h3>Admin Panel</h3>
    <label for="username">Username:</label><br>
    <input type="text" id="username" placeholder="Enter username"><br>
    <label for="password">Password:</label><br>
    <input type="password" id="password" placeholder="Enter password"><br>
    <button onclick="validateAdmin()">Submit</button>
    <button onclick="closeModal()">Cancel</button>
</div>
</div>
<section id="home" class="hero">
    <h1>Welcome to SciAstra</h1>
    <p>Discover the best courses at discounted prices and stay updated with our latest blogs!</p>
    <a href="#free-courses" class="hero-btn">Explore Courses</a>
</section>

<section id="blogs">
    <h1>Latest Blogs</h1>
    <div class="swiper blogs-swiper">
      <div class="swiper-wrapper">
        <% blogs.forEach(blog => { %>
          <div class="swiper-slide">
            <div class="card">
              <a href="<%= blog.blog_link %>" style="text-decoration: none; color:inherit;">
              <div class="card-content">
                <div class="image">
                       <img src="<%= blog.Blog_img %>" alt="<%= blog.Blog_title %>" />
                    </div>
                <div class="name-profession">
                  <span class="name"><%= blog.Blog_title %></span>
                </div>
                <div class="card-description">
                  <p><%= blog.Blog_description %></p>
                </div>
                <p class="created-at">Published at: <%= new Date(blog.created_at).toLocaleString() %></p>
              </div>
              </a>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </section>
  <section id="free-courses">
    <h3>Free Courses</h3>
    <div class="swiper free-courses-swiper">
      <div class="swiper-wrapper">
        <% freeCourses.forEach(course => { %>
          <div class="swiper-slide">
            <div class="card">
              <div class="card-content">
                <div class="image">
                  <img src="<%= course.course_img %>" alt="<%= course.coursename %>" style="width: 100%; height: 100%; object-fit: cover; border-radius: 20px;">
                </div>
                <div class="name-profession">
                  <span class="name"><%= course.coursename %></span>
                </div>
                <p style="font-size: 1.1em; margin-top: 15px; color: var(--secondary-color); font-weight: 700;">Price: Free</p>
                <p style="height: 20px; margin-bottom: 5px;"></p> 
                <div class="button">
                  <button class="message-button" onclick="window.location.href='<%= course.link %>'; purchaseCourse('<%= course.coursename %>');">Learn More</button>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </section>
  
<section id="paid-courses">
    <h3>Paid Courses</h3>
    <div class="swiper paid-courses-swiper">
      <div class="swiper-wrapper">
        <% paidCourses.forEach(course => { %>
          <div class="swiper-slide">
            <div class="card">
              <div class="card-content">
                <div class="image">
                  <img src="<%= course.course_img %>" alt="<%= course.coursename %>" style="width: 100%; height: 100%; object-fit: cover; border-radius: 20px;">
                </div>
                <div class="name-profession">
                  <span class="name"><%= course.coursename %></span>
                </div>
                <p style="font-size: 1.1em; margin-top: 15px ; color: var(--primary-color); font-weight: 700;">Price: ₹<%= course.price %></p>
                 <p style="height: 20px; margin-bottom: 5px;"></p> 
                <div class="button">
                    <button class="message-button" 
                        onclick="enrollNow('<%= course.coursename %>', '<%= course.price %>', '<%= course.link %>')">
                        Enroll Now
                    </button>
                </div>
                </div>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="swiper-pagination"></div>
